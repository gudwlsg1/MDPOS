<UserControl x:Class="MDPOS.Controls.ProgressBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDPOS.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             MinHeight="800" MinWidth="1400">
    
    <Grid Background="White">
        
        <Image Source="/Resources/back.jpg" Width="auto" Height="auto"/>
        
        <ProgressBar x:Name="pbLoading" 
                     Minimum="0" Maximum="100" Value="0" Height="40" Width="600"/>
    </Grid>
</UserControl>
